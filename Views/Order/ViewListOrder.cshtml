@model MultiModels
@{
    ViewData["Title"] = "ViewListOrder";
    Layout = "~/Views/Shared/_HomePage.cshtml";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/ListOrderCusStyleVer2.css">
    <script src="https://kit.fontawesome.com/1bd9fa3a2e.js" crossorigin="anonymous"></script>
    <title>Document</title>
</head>

<body>
    <main class="mt-3">
        <section class="content">
            <aside>
                <div class="top_aside">
                    <div class="avatar_aside">
                        <a href="#">
                            <img src="~/images/Lovecake.png" alt="">
                        </a>
                    </div>
                    <div class="infor_aside">
                        <span>@Model.getAccount.Username</span>
                        <span href="#"><i class="fa-solid fa-pen"></i>@Model.getAccount.PhoneNumber</span>
                    </div>
                </div>
                <ul>
                    <li>
                        <a asp-action="ViewListOrder"><i class="fa-solid fa-rectangle-list"></i> Tất cả</a>
                    </li>
                    <li>
                        <a asp-action="ViewListOrderFilter" asp-route-status="Chờ xác nhận"><i
                                class="fa-solid fa-rectangle-list"></i> Chờ xác
                            nhận</a>
                    </li>
                    <li>
                        <a asp-action="ViewListOrderFilter" asp-route-status="Đã xác nhận"><i
                                class="fa-solid fa-rectangle-list"></i> Đã xác
                            nhận</a>
                    </li>
                    <li>
                        <a asp-action="ViewListOrderFilter" asp-route-status="Đang giao"><i
                                class="fa-solid fa-rectangle-list"></i> Đang giao</a>
                    </li>
                    <li>
                        <a asp-action="ViewListOrderFilter" asp-route-status="Đã giao"><i
                                class="fa-solid fa-rectangle-list"></i> Đã giao</a>
                    </li>
                    <li>
                        <a asp-action="ViewListOrderFilter" asp-route-status="Đã hủy"><i
                                class="fa-solid fa-rectangle-list"></i> Đã hủy</a>
                    </li>
                </ul>
            </aside>

            <section class="order">
                <div class="top_order">
                    <div class="chitiet">
                        <h4 style="font-weight: 700;">Danh mục đơn hàng</h4>
                    </div>
                </div>

                <div class="bot_order">
                    <div class="danhsachdonhang">
                        @if (Model.orderList.Any())
                        {
                            @foreach (var item in Model.orderList)
                            {
                                <div class="donhang">
                                    <div class="top_donhang">
                                        <div class="left_thongtindonhang">
                                            <p>Mã đơn hàng: <span>@item.OId</span></p>
                                            <p>Địa chỉ: <span>@item.Address</span></p>
                                            <p>Ngày đặt hàng: <span>@item.ODate.ToString("dd/MM/yyyy")</span></p>
                                        </div>
                                        <div class="right_thongtindonhang">
                                            <p>Phương thức thanh toán: <span>@item.Payment</span></p>
                                            <p>Trạng thái đơn hàng: <span>@item.Status</span></p>
                                            <p>Tổng tiền: <span>đ @item.TotalPrice</span></p>
                                        </div>
                                    </div>
                                    <div class="bot_donhang">
                                        <div class="thaotac">
                                            @if (item.Status == "Đã hủy")
                                            {

                                            }
                                            else
                                            {
                                                <a class="xemchitiet" asp-action="ViewOrderDetailByCusID"
                                                    asp-route-oid="@item.OId">Xem chi tiết</a>
                                                @if (item.Status == "Chờ xác nhận" || item.Status == "Đã xác nhận")
                                                {
                                                    <a class="huydon" asp-action="CancelOrder" asp-route-oid="@item.OId">Hủy đơn</a>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <h3>Không có đơn hàng</h3>
                        }
                    </div>
                </div>
            </section>
        </section>
    </main>
</body>

</html>