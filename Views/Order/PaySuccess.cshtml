@model MultiModels
@{
    ViewData["Title"] = "PaySuccess";
    Layout = "~/Views/Shared/_HomePage.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
        <link rel="stylesheet" href="~/css/paySuccessStyle.css"/>
        <link rel="icon" type="image/png" href="#">
    <title>Document</title>
</head>
<body>
    <div class="container p-0">
            <div class="card px-4">
                <i class="pt-3 fa-solid fa-circle-check fa-4x"></i>
                <p class="h8 py-3">Thanh toán thành công</p>
                @if (Model.getOrder != null){
                    <div class="row gx-3">
                        <div class="col-12">
                            <div class="d-flex flex-column">
                                <p class="text mb-1">Phương thức thanh toán</p>
                                <p class="mb-3">@Model.getOrder.Payment</p>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="d-flex flex-column">
                                <p class="text mb-1">Số tiền thanh toán</p>
                                <p class="mb-3">@Model.getOrder.TotalPrice</p>
                            </div>
                        </div>
                        <div class="col-12">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mb-3">
                                <span class="ps-3">Tiếp tục mua hàng</span>
                                <span class="fas fa-arrow-right"></span>
                            </a>
                        </div>
                    </div>              
                }
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</body>
</html>