@model Account
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LoginPage.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6 mt-5">
            <!-- White Container -->
            <div class="container bg-white rounded mt-2 mb-2 px-0">
                <!-- Main Heading -->
                <div class="row justify-content-center align-items-center pt-3">
                    <h1>
                        <strong>Register</strong>
                    </h1>
                </div>
                <div class="pt-3 pb-3">
                    <form class="form-horizontal" asp-action="Register" method="post">
                        <!-- User Name Input -->
                        <div class="form-group row justify-content-center px-3">
                            <div class="col-9 px-0">
                                <input type="text" asp-for="Username" placeholder="Username"
                                    class="form-control border-info placeicon">
                                    <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Password Input -->
                        <div class="form-group row justify-content-center px-3">
                            <div class="col-9 px-0">
                                <input type="password" asp-for="Password" placeholder="Password"
                                    class="form-control border-info placeicon">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row justify-content-center px-3">
                            <div class="col-9 px-0">
                                <input type="text" asp-for="Fullname" placeholder="Fullname"
                                    class="form-control border-info placeicon">
                                    <span asp-validation-for="Fullname" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row justify-content-center px-3">
                            <div class="col-9 px-0">
                                <input type="text" asp-for="PhoneNumber" placeholder="PhoneNumber"
                                    class="form-control border-info placeicon">
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row justify-content-center px-3">
                            <div class="col-9 px-0">
                                <input type="text" asp-for="Email" placeholder="Email"
                                    class="form-control border-info placeicon">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Log in Button -->
                        <div class="form-group row justify-content-center">
                            <div class="col-3 px-3 mt-3">
                                <input type="submit" value="register" class="btn btn-block btn-info">
                            </div>
                        </div>
                    </form>
                </div>
                <!-- Alternative Login -->
                <div class="mx-0 px-0 bg-light">

                    <!-- Horizontal Line -->
                    <div class="px-4 pt-5">
                        <hr>
                    </div>
                    <!-- Register Now -->
                    <div class="pt-2">
                        <div class="row justify-content-center">
                            <h5>
                                Don't have an Account?<span><a asp-controller="Register" asp-action="Register"
                                        class="text-danger"> Register Now!</a></span>
                            </h5>
                        </div>
                        <div class="row justify-content-center align-items-center pt-4 pb-5">
                            <div class="col-4">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
