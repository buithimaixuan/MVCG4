@{
    ViewData["Title"] = "CountAccounts";
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-3 col-md-3" style="margin-top: 10px">
            <div class="khung card border-secondary" style="height: 100px;">
                <div class="card-body text-white d-flex align-items-center"
                    style="background-color: #e1ff7d; height: 100%;">
                    <div class="col-4" style="float: left;"> <!-- Đặt icon bên trái bằng cách sử dụng float: left -->
                        <i class="fa fa-address-card fa-3x" style="margin-right: 7px;"></i>
                    </div>
                    <div class="col-8" style="float: right;">
                        <!-- Đặt chữ bên phải bằng cách sử dụng float: right -->
                        <h2>@ViewData["AccountsCount"]</h2>
                        <h4>Khách hàng</h4>
                    </div>
                </div>
            </div>
        </div>


        <div class="col-lg-3 col-md-3" style="margin-top: 10px">
            <div class="khung card border-secondary" style="height: 100px;">
                <div class="card-body text-white d-flex align-items-center"
                    style="background-color: #feffc7; height: 100%;">
                    <div class="col-4" style="float: left;"> <!-- Đặt icon bên trái bằng cách sử dụng float: left -->
                        <i class="fa fa-male fa-3x" style="margin-right: 7px;"></i>
                    </div>
                    <div class="col-8" style="float: right;"> <!-- Đặt chữ bên phải bằng cách sử dụng float: right -->
                        <h2>@ViewData["CountAdmin"]</h2>
                        <h4>Nhân viên</h4>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-3" style="margin-top: 10px">
            <div class="khung card border-secondary" style="height: 100px;">
                <div class="card-body text-white d-flex align-items-center"
                    style="background-color: #e1ff7d; height: 100%;">
                    <div class="col-4" style="float: left;"> <!-- Đặt icon bên trái bằng cách sử dụng float: left -->
                        <i class="fa fa-cart-plus fa-3x" style="margin-right: 7px;"></i>
                    </div>
                    <div class="col-8" style="float: right;"> <!-- Đặt chữ bên phải bằng cách sử dụng float: right -->
                        <h2>@ViewData["CountOrder"]</h2>
                        <h4>Số đơn hàng</h4>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-3" style="margin-top: 10px">
            <div class="khung card border-secondary" style="height: 100px;">
                <div class="card-body text-white d-flex align-items-center"
                    style="background-color: #feffc7; height: 100%;">
                    <div class="col-4" style="float: left;"> <!-- Đặt icon bên trái bằng cách sử dụng float: left -->
                        <i class="fa fa-usd fa-3x" style="margin-right: 7px;"></i>
                    </div>
                    <div class="col-8" style="float: right;"> <!-- Đặt chữ bên phải bằng cách sử dụng float: right -->
                        <marquee direction="up" style="height: 35px;">
                            <h2 style="margin-top: 7px;">@ViewData["CountMoney"]</h2>
                        </marquee>

                        @* <h1>@ViewData["CountMoney"]</h1> *@
                        <h4>Doanh thu</h4>
                    </div>
                </div>
            </div>
        </div>



    </div>
</div>




@*
<h1>Số lượng khách hàng:</h1>
<p>@ViewData["AccountsCount"]</p>

<h1>Số lượng nhân viên:</h1>
<p>@ViewData["CountAdmin"]</p>

<h1>Số lượng đơn hàng đã bán:</h1>
<p>@ViewData["CountOrder"]</p> *@

<canvas id="myChart" width="50"></canvas>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Kiểm tra xem OrderLabels và OrderData có tồn tại trong ViewData không
    var orderLabels = [@Html.Raw(ViewData["OrderLabels"] ?? "[]")];
    var orderData = [@Html.Raw(ViewData["OrderData"] ?? "[]")];

    if (orderLabels.length > 0 && orderData.length > 0) {
        var ctx = document.getElementById('myChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: orderLabels,
                datasets: [{
                    label: 'Số lượng đơn hàng đã bán',
                    data: orderData,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(255, 159, 64, 0.2)',
                        'rgba(255, 205, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(201, 203, 207, 0.2)'
                    ],
                    fill: false,

                    tension: 0.1
                }]
            }
        });
    }
</script>
